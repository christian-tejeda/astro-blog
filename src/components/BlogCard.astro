---
export interface Props {
		title: string;
		description: string;
		pubDate: string;
		url?: string;
		heroImage?: string;
}

const { title, description, pubDate, url, heroImage } = Astro.props as Props;
---
<a href={url} class="flex flex-row items-center my-4 rounded-lg border border-gray-100 shadow-md group dark:bg-gray-800 dark:border-gray-700">
		<img class="w-32 h-48 object-cover rounded-lg" src={heroImage} />
		<div class="flex flex-col justify-center p-4">
			<h4 class="text-lg font-bold transition-all group-hover:text-indigo-400">{title}</h4>
			<time class="text-gray-400 text-sm"
				datetime={pubDate}>
				{new Date(pubDate).toLocaleDateString('es-UY', {
					year: 'numeric',
					month: 'short',
					day: 'numeric',
				})}
			</time>
			<p class="">{description}</p>
		</div>
	</a>
