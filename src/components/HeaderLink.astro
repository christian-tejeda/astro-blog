---
export interface Props extends astroHTML.JSX.AnchorHTMLAttributes {}

const { href, class: className, ...props } = Astro.props as Props;
const isActive = href === Astro.url.pathname;
---

<a href={href} class:list={['text-indigo-300', 'hover:text-indigo-600', 'flex', 'flex-row', 'mx-2', 'transition-all', { active: isActive }]} {...props}>
	<slot />
</a>
