---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
	content: {
		title: string;
		description: string;
		pubDate?: string;
		updatedDate?: string;
		heroImage?: string;
	}

}

const { content: { title, description, pubDate, updatedDate, heroImage } } = Astro.props as Props;
---

<html>
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body class="container flex flex-col justify-items-center items-center mx-auto w-1/3">
		<Header />
		<main>
			<article>
				{heroImage && (
					<img
						width={720}
						height={360}
						src={heroImage}
						alt=""
					/>
				)}
				<h1 class="title my-4 text-3xl font-bold">{title}</h1>
				{pubDate && <time>{pubDate}</time>}
				<div class="text-gray-400">{updatedDate && <div>Actualizado por Ãºltima vez: <time>{updatedDate}</time></div>}</div>
				<hr class="my-2 border border-solid border-slate-300"/>
				<slot />
			</article>
		</main>
		<Footer />
	</body>
</html>
